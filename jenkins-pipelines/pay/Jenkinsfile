#!/usr/bin/env groovy

pipeline {
      agent {
        docker {
          reuseNode true
          image 'terraform-az'
          args '-v /var/run/docker.sock'
        }
      }
  stages {

    stage('Terraform Init') { 
      steps {
        sh (script:"cd env/pay && terraform init -input=false")
      }
    }
    stage('Terraform Plan') {
      steps {
          withCredentials([azureServicePrincipal('SimonTestSPN')]) {
            sh '''az login --service-principal -u $AZURE_CLIENT_ID -p $AZURE_CLIENT_SECRET -t $AZURE_TENANT_ID'''
            sh ''' cd env/pay
            terraform plan -var "arm_subscription_id=$AZURE_SUBSCRIPTION_ID" -var "arm_sp_application_id=$AZURE_CLIENT_ID" -var "arm_sp_application_secret=$AZURE_CLIENT_SECRET" -var "arm_tenant_id=$AZURE_TENANT_ID" -no-color
            '''
      }
     }
    }
    stage('Terraform Apply') {
      steps {
          withCredentials([azureServicePrincipal('SimonTestSPN')]) {
            sh ''' cd env/pay
            terraform apply -input=false -auto-approve "tfplan" -no-color
            '''
      }
     }
    }    
  }
  post { 
    cleanup { 
      deleteDir()
    }
  }
}